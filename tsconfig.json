{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": { "*": ["./node_modules/*", "./src/types/*"] },
    "typeRoots": [
      "./node_modules/@types", // Tipos instalados de DefinitelyTyped
      "./src/types" // Carpeta donde tienes tus archivos .d.ts
    ],

    "esModuleInterop": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./src/**/*" // Incluye todos los archivos TypeScript en tu proyecto
  ],
  "exclude": [
    "node_modules", // Excluye dependencias
    "dist" // Excluye archivos compilados
  ]
}
